<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <data>
        <import type="java.lang.String" />
        <variable
            name="matchleagueModel"
            type="girnarsoft.com.demoapp.fragment.model.LeagueModel"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblLeagueName"
                    android:layout_marginStart="@dimen/dimen_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_sixteen"
                    tool:text="200k Monster"
                    android:text="@{matchleagueModel.leagueName}"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_below="@+id/lblLeagueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="M"
                    android:text="@{(matchleagueModel.winners > 1)? @string/multiple_winner : @string/single_winner}"
                    android:layout_marginTop="@dimen/dimen_five"
                    android:layout_marginStart="@dimen/dimen_five"
                    android:textColor="@color/colorCyan"
                    android:textSize="@dimen/sp_size_twelve"
                    />
                <TextView
                    android:id="@+id/btnJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_size_fourteen"
                    android:textColor="@color/colorWhite"
                    android:text="JOIN"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorAccent"
                    android:paddingStart="@dimen/dimen_ten"
                    android:paddingEnd="@dimen/dimen_ten"
                    android:paddingTop="@dimen/dimen_five"
                    android:paddingBottom="@dimen/dimen_five"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_five"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_five"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lblSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/sp_size_twelve"
                        android:text="SIZE"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:layout_below="@+id/lblSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_size_sixteen"
                        tool:text="5 / 5"
                        android:text="@{String.valueOf(matchleagueModel.joinedTeam) + '/' + String.valueOf(matchleagueModel.teamSize)}"
                        android:layout_alignParentStart="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dimen_five"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lblbuyIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/sp_size_twelve"
                        android:text="BUY-IN"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:layout_below="@+id/lblbuyIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_size_sixteen"
                        tool:text="₹ 50"
                        android:text="@{'₹' + String.valueOf(matchleagueModel.entryFee)}"
                        android:layout_alignParentStart="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlyPayout"
                    android:layout_marginStart="@dimen/dimen_five"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lblPayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/sp_size_twelve"
                        android:text="PAYOUT"
                        android:textAlignment="textEnd"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:textAlignment="textEnd"
                        android:layout_below="@+id/lblPayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_size_sixteen"
                        tool:text="₹ 170"
                        android:text="@{'₹' + String.valueOf(matchleagueModel.winningAmount)}"
                        android:layout_alignParentStart="true"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
